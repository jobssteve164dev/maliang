# Novel AI Assistant - 环境变量配置示例
# 复制此文件为 .env 并填入实际的配置值

# 开发环境配置
NODE_ENV=development
ELECTRON_IS_DEV=true

# React 开发服务器配置
REACT_APP_DEV_SERVER_PORT=3000
REACT_APP_DEV_SERVER_HOST=localhost

# AI 模型 API 配置
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# DeepSeek
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# OpenRouter
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Ollama (本地部署)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# 数据库配置
DB_PATH=./data/novel-ai-assistant.db
DB_BACKUP_ENABLED=true
DB_BACKUP_INTERVAL=3600000

# 应用配置
APP_NAME=Novel AI Assistant
APP_VERSION=1.0.0
APP_AUTO_SAVE_INTERVAL=30000
APP_MAX_RECENT_PROJECTS=10

# 日志配置
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/app.log

# 安全配置
ENCRYPTION_KEY=your_encryption_key_here
SESSION_SECRET=your_session_secret_here

# 开发工具配置
WEBPACK_DEV_SERVER_PORT=3000
ELECTRON_RELOAD_ENABLED=true
REACT_DEVTOOLS_ENABLED=true
