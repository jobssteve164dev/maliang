{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist/renderer",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx"
  },
  "include": [
    "src/renderer/**/*",
    "src/shared/**/*"
  ],
  "types": ["node"],
  "exclude": [
    "src/main/**/*",
    "node_modules",
    "dist",
    "release"
  ]
}
